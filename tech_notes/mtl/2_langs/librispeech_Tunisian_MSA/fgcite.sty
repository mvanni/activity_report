%
% For citing a figure at the beginning of a sentence
\newcommand\Fgcite[2][]{%
  \if l#1%
    \Fgname\fgsep\fgldelimit#2\fgrdelimit
  \else%
    \Fgname\fgsep\fgldelimit\ref{#2}\fgrdelimit
  \fi
}
% For citing a figure in the middle of a sentence
\newcommand\fgcite[2][]{%
  \if l#1%
    \fgname\fgsep\fgldelimit#2\fgrdelimit
  \else%
    \fgname\fgsep\fgldelimit\ref{#2}\fgrdelimit
  \fi
}

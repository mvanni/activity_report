% Default to Table Type B format
\TbTypeB
%
% For citing a table at the beginning of a sentence
\newcommand\Tbcite[2][]{%
  \if l#1%
    \Tbname\tbsep\tbldelimit#2\tbrdelimit
  \else%
    \Tbname\tbsep\tbldelimit\ref{#2}\tbrdelimit
  \fi
}
% For citing a table in the middle of a sentence
\newcommand\tbcite[2][]{%
  \if l#1%
    \tbname\tbsep\tbldelimit#2\tbrdelimit
  \else%
    \tbname\tbsep\tbldelimit\ref{#2}\tbrdelimit
  \fi
}
% For citing the first of multiple tables at the beginning of a sentence
\newcommand\Tbcites[2][]{%
  \if l#1%
    \Tbsname\tbssep\tbldelimit#2\tbrdelimit
  \else%
    \Tbsname\tbssep\tbldelimit\ref{#2}\tbrdelimit
  \fi
}
% For citing the first of multiple tables in the middle of a sentence
\newcommand\tbcites[2][]{%
  \if l#1%
    \tbsname\tbssep\tbldelimit#2\tbrdelimit
  \else%
    \tbsname\tbssep\tbldelimit\ref{#2}\tbrdelimit
  \fi
}
% For citing a table number without the leading word table, tbl, etc.
% Used in conjuction with \Tbcites and \tbcites
\newcommand\andtbcite[2][]{%
  \if l#1%
    \tbldelimit#2\tbrdelimit
  \else%
    \tbldelimit\ref{#2}\tbrdelimit
  \fi
}
